{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@entities/*": ["entities/*"],
      "@auth/*": ["auth/*"],
      "@permissions/*": ["permissions/*"],
      "@roles/*": ["roles/*"],
      "@users/*": ["users/*"],
      "@refresh-token/*": ["refresh-token/*"]
    }
  },
  "exclude": ["node_modules", "test", "dist", "**/*.spec.ts"]
}
