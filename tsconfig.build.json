{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@entities/*": ["entities/*"],
      "@auth/*": ["auth/*"],
      "@permissions/*": ["permissions/*"],
      "@roles/*": ["roles/*"],
      "@users/*": ["users/*"],
      "@refresh-token/*": ["refresh-token/*"],
      "@user-profile/*": ["user-profile/*"],
      "@user-token/*": ["user-token/*"],
      "@dto/*": ["dto/*"],
      "@mail/*": ["mail/*"],
      "@common/*": ["common/*"]
    }
  },
  "exclude": ["node_modules", "test", "dist", "**/*.spec.ts"]
}
